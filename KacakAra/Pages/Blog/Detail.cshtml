@page "/blog/{slug}"
@model KacakAra.Pages.Blog.DetailModel
@{
}

@if (Model.Post != null)
{
    <article class="blog-detail">
        <section class="blog-detail-hero">
            <div class="container">
                <div class="blog-detail-meta">
                    <span class="blog-date">@Model.Post.PublishedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</span>
                    <span class="blog-author">@Model.Post.Author</span>
                </div>
                <h1>@Model.Post.Title</h1>
                <p class="blog-detail-description">@Model.Post.Description</p>
                <div class="blog-tags">
                    @foreach (var tag in Model.Post.Tags)
                    {
                        <span class="tag">@tag</span>
                    }
                </div>
            </div>
        </section>

        <section class="blog-detail-content">
            <div class="container">
                <div class="content-wrapper">
                    @Html.Raw(Model.Post.Content)
                </div>
            </div>
        </section>

